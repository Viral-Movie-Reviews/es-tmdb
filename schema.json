{
  "mappings": {
    "movie": {
      "properties": {
        "title": {
          "type": "text",
          "copy_to": "text_all",
          "analyzer": "my_english"
        },
        "tagline": {
          "type": "text",
          "copy_to": "text_all",
          "analyzer": "my_english"
        },
        "directors": {      
          "type": "text",
          "analyzer": "my_english",
          "copy_to": ["text_people", "text_people2", "text_people_notf"]
        },
        "cast": {
          "type": "text",
          "analyzer": "my_english",
          "copy_to": ["text_people", "text_people2", "text_people_notf"]
         }, 
        "overview": {
          "type": "text",
          "analyzer": "my_english",
          "copy_to": "text_all"
        },
        "text_all": {
          "type": "text",
          "analyzer": "my_english"
        },
        "text_people": {
          "type": "text",
          "fielddata": true,
          "analyzer": "my_english",
          "store": true
        },
        "text_people2": {
          "type": "text",
          "analyzer": "names",
          "store": true
        },
        "text_people_notf": {
          "type": "text",
          "analyzer": "names",
          "similarity": "no_tf_similarity"
        }

  }}},
  "settings": {
    "analysis" : {
      "filter": {
        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_"},
        "english_keywords": {
          "type":       "keyword_marker",
          "keywords":   []},
        "english_stem": {
          "type":       "stemmer",
          "language":   "english"},
        "english_possessive_stem": {
          "type":       "stemmer",
          "language":   "possessive_english"},
        "my_bigram_filter": {
          "type": "shingle",
          "max_shingle_size": 2,
          "min_shingle_size": 2,
          "output_unigrams": false}
      },
      "analyzer": {
        "names": {
          "type": "custom",
            "tokenizer": "standard",
            "filter":  ["lowercase", 
                         "english_possessive_stem"]
        },
        "my_english": {
            "type": "custom",
            "char_filter": ["html_strip"],
            "tokenizer": "standard",
            "filter":  ["lowercase", 
                         "english_possessive_stem",
                         "english_stop",
                         "english_keywords",
                         "english_stem"]
  }}},
  "index": {
    "similarity" : {
      "no_tf_similarity" : {
        "type" : "BM25",
        "k1": 0.0,
        "b": 1.0
      }
    },
    "number_of_shards": 1
  }}
}

