{
  "mappings": {
    "movie": {
      "properties": {
        "title": {
          "type": "text",
          "analyzer": "my_english",
          "copy_to": ["text_std", "text_all", "text_std_gr_idx_syn", "text_std_syn", "text_std_idioms"]
        },
        "tagline": {
          "type": "text",
          "analyzer": "my_english",
          "copy_to": ["text_std", "text_all", "text_std_gr_idx_syn", "text_std_syn", "text_std_idioms"]
        },
        "directors": {      
          "type": "text",
          "analyzer": "my_english",
          "copy_to": ["text_std", "text_people", "text_people2", "text_people_notf", "text_std_gr_idx_syn", "text_people_syn", 
                      "text_std_syn", "text_people_gr_idx_syn", "text_std_idioms"]
        },
        "cast": {
          "type": "text",
          "analyzer": "my_english",
          "copy_to": ["text_std", "text_people", "text_people2", "text_people_notf", "text_std_gr_idx_syn", 
                      "text_people_syn", "text_std_syn", "text_people_gr_idx_syn", "text_std_idioms"]
         }, 
        "overview": {
          "type": "text",
          "analyzer": "my_english",
          "copy_to": ["text_std", "text_all", "text_std_gr_idx_syn", "text_std_syn", "text_std_idioms"]
        },
        "genres": {
          "type": "text",
          "analyzer": "my_english",
          "copy_to": ["text_std", "text_all", "text_std_gr_idx_syn", "text_std_syn", "text_std_idioms"]
        },
        "text_all": {
          "type": "text",
          "analyzer": "my_english"
        },
        "text_people": {
          "type": "text",
          "fielddata": true,
          "analyzer": "standard",
          "store": true
        },
        "text_std": {
          "type": "text",
          "analyzer": "standard",
          "search_analyzer": "std_syn",
          "store": true
        },
        "text_std_idioms": {
          "type": "text",
          "analyzer": "std_idioms",
          "store": true
        },
        "text_std_gr_idx_syn": {
          "type": "text",
          "analyzer": "std_syn_gr_multiterm",
          "store": true
        },
        "text_people_gr_idx_syn": {
          "type": "text",
          "analyzer": "std_syn_gr_multiterm",
          "store": true
        },
        "text_std_syn_mt": {
          "type": "text",
          "analyzer": "std_syn_multiterm",
          "store": true
        },
        "text_people_syn_mt": {
          "type": "text",
          "analyzer": "std_syn_multiterm",
          "store": true
        },
        "text_std_syn": {
          "type": "text",
          "analyzer": "std_syn_bidirect",
          "store": true
        },
        "text_people_syn": {
          "type": "text",
          "analyzer": "std_syn_bidirect",
          "store": true
        },
        "text_people2": {
          "type": "text",
          "analyzer": "names",
          "store": true
        },
        "text_people_notf": {
          "type": "text",
          "analyzer": "names",
          "similarity": "no_tf_similarity"
        }

  }}},
  "settings": {
    "analysis" : {
      "filter": {
        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_"},
        "english_keywords": {
          "type":       "keyword_marker",
          "keywords":   []},
        "english_stem": {
          "type":       "stemmer",
          "language":   "english"},
        "english_possessive_stem": {
          "type":       "stemmer",
          "language":   "possessive_english"},
        "my_bigram_filter": {
          "type": "shingle",
          "max_shingle_size": 2,
          "min_shingle_size": 2,
          "output_unigrams": false},
        "syn": {
          "type": "synonym",
          "synonyms": [
            "wife => bride",
            "wife,spouse"]},
        "syn_bidirect": {
            "type": "synonym",
            "synonyms": [
              "wife,bride",
              "wife,spouse"]},
        "syn_directed": {
          "type": "synonym",
          "synonyms": [
            "wife => wife, bride",
            "spouse => spouse, husband, wife, partner",
            "tunes => cartoons, toons, songs"]},
        "syn_multiterm": {
          "type": "synonym",
          "synonyms": ["looney tunes, cartoons",
            "science fiction, sci fi, sci-fi, scifi"]
        },
      "syn_gr_multiterm": {
        "type": "synonym_graph",
        "synonyms": [
          "looney tunes, cartoons",
          "science fiction, sci fi, sci-fi, scifi"]},
      "syn_idioms": {
        "type": "synonym",
        "synonyms": [
          "looneytunes, looney tunes, looney toons => looney_tunes",
          "sci fi, scifi, science fiction => science_fiction"]}
      },
      "analyzer": {
        "names": {
          "type": "custom",
            "tokenizer": "standard",
            "filter":  ["lowercase", 
                         "english_possessive_stem"]
        },
        "my_english": {
            "type": "custom",
            "char_filter": ["html_strip"],
            "tokenizer": "standard",
            "filter":  ["lowercase", 
                         "english_possessive_stem",
                         "english_stop",
                         "english_keywords",
                         "english_stem"]},
        "std_syn": {
          "type": "custom",
          "tokenizer": "standard",
          "filter":  ["lowercase", 
                        "syn"]},
        "std_syn_bidirect": {
          "type": "custom",
          "tokenizer": "standard",
          "filter":  ["lowercase", 
                        "syn_bidirect"]},
        "std_syn_directed": {
          "type": "custom",
          "tokenizer": "standard",
          "filter":  ["lowercase", 
                        "syn_directed"]},
        "std_syn_multiterm": {
          "type": "custom",
          "tokenizer": "standard",
          "filter":  ["lowercase", 
                        "syn_multiterm"]},
        "std_syn_gr_multiterm": {
          "type": "custom",
          "tokenizer": "standard",
          "filter":  ["lowercase", 
                        "syn_gr_multiterm"]},
        "std_idioms": {
          "type": "custom",
          "tokenizer": "standard",
          "filter":  ["lowercase", 
                       "syn_idioms"]}
 
  }},
  "index": {
    "similarity" : {
      "no_tf_similarity" : {
        "type" : "BM25",
        "k1": 0.0,
        "b": 1.0
      }
    },
    "number_of_shards": 1
  }}
}

